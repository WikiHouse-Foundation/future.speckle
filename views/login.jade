extends ./layout.jade
block header
  link(rel="stylesheet", href="/css/auth0lock.css")
block content
  .container
    .row(style="margin-top:20px")
      .col-sm-12
        .row
          .col-sm-12
            h1.text-center #[a.logo(href="/") #[i.fa.fa-sliders] S ]
          
     
        .col-sm-6.col-sm-offset-3.text-center
          #root.text-center(style='width: 320px; margin: 40px auto; padding: 10px;')
          
          script(src='https://cdn.auth0.com/js/lock-8.2.min.js')
          
          script.
            var lock = new Auth0Lock('#{authdata.clientId}', '#{authdata.domain}');
            lock.show({
            container: 'root'
            , primaryColor: "#0000FF"
            , icon: "#{authdata.baseUrl}/img/SPKLogo.svg"
            , callbackURL: '#{authdata.baseUrl}/callback'
            , responseType: 'code'
            , authParams: {
              scope: 'openid profile'
            }
            });
            var options = {
              disableSignupAction: false,
              disableResetAction: false
            };

