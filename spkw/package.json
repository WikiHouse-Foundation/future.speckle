{
    "name": "future.viewer",
    "version": "0.0.1",
    "description": "soulution and performance space visualiser",
    "author": "Dimitrie Andrei Stefanescu | http://dimitrie.org",
    "license": "MIT",
    "scripts": {
        "watch-css": "./node_modules/node-sass/bin/node-sass --output-style=compressed --output dist/css/ --watch src/sass/ ",
        "build-css": "./node_modules/node-sass/bin/node-sass --output-style=compressed --output=dist/css/         src/sass/ ",
        "watch-html": "./node_modules/jade/bin/jade.js --out=dist/ --pretty --watch src/jade/*.jade ",
        "build-html": "./node_modules/jade/bin/jade.js --out=dist/ --pretty         src/jade/*.jade ",
        "watch-js": "./node_modules/webpack/bin/webpack.js --watch --config webpack.config.js",
        "build-js": "./node_modules/webpack/bin/webpack.js         --config webpack.config.js",
        "build-all": "npm run build-css && npm run build-html && npm run build-js",
        "watch-all": "npm run watch-css &  npm run watch-html &  npm run watch-js"
    },
    "devDependencies": {
        "jade": "^1.11.0",

        "node-sass": "^3.6.0",

        "webpack": "^1.13.0",
        "css-loader": "^0.23.1",
        "style-loader": "^0.13.1",
        "sass-loader": "^3.2.0",
        "file-loader": "^0.8.5",
        "url-loader": "^0.5.7",
        "extract-text-webpack-plugin": "^1.0.1",

        "babel-core": "^6.7.7",
        "babel-loader": "^6.2.4",
        "babel-preset-es2015-nostrict": "^6.6.2",

        "d3": "^3.5.16",
        "jquery": "^2.2.0",
        "normalize-scss": "^4.0.3",
        "nouislider": "github:leongersen/noUiSlider",
        "shortid": "^2.2.4",
        "three": "^0.73.2",
        "three-orbit-controls": "^72.0.0",
        "tween.js": "^16.3.4",
        "wolfy87-eventemitter": "^4.3.0"
    }
}
